<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen pt-1">
  <form id="upload-dp-form" hidden action="/fileupload" method="post" enctype="multipart/form-data">
    <input type="file" name="image" />
  </form>
  <div class="prof-details flex flex-col items-center justify-center mt-8">
    <div class="relative">
      <span id="upload-logo" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
        <i class="ri-pencil-fill text-zinc-800"></i>
      </span>
      <div class="w-32 h-32 rounded-full bg-zinc-800 overflow-hidden">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage%>" alt="" />
      </div>
    </div>
    <h1 class="text-3xl font-semibold mt-4"><%= user.fullname %></h1>
    <h3 class="text-md">@<%= user.username %></h3>
    <a href="/edit" class="px-7 py-2 bg-zinc-700 rounded-full text-white text-sm font-semibold mt-4">Edit</a>
    <a href="/addpost" class="px-10 py-2 rounded-lg text-white bg-red-600 text-xs font-semibold mt-5">Add New Post</a>
  </div>

  <div class="cards flex flex-wrap gap-10 px-10 mt-10">
    <div class="card">
      <div class="w-52 h-40 bg-zinc-700 rounded-lg overflow-hidden">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="" />
      </div>
      <a href="/show/posts" class="inline-block text-xl font-semibold mt-2">Your Uploaded Pins</a>
      <h5 class="text-sm font-medium opacity-60"><%= user.posts.length %></h5>
    </div>
  </div>
</div>

<script>
  document.querySelector("#upload-logo").addEventListener("click", function () {
    document.querySelector("#upload-dp-form input").click();
  });

  document.querySelector("#upload-dp-form input").addEventListener("change", function () {
    document.querySelector("#upload-dp-form").submit();
  });
</script>

<% include ./partials/footer.ejs %>
