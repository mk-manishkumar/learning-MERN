<% include ./partials/header.ejs %>

<div class="w-full min-h-screen px-10 px-5">
  <h1 class="text-xl mt-10">Create a new Post</h1>
  <hr class="mt-3" />
  <form action="/createpost" method="post" enctype="multipart/form-data">
    <input class="block w-1/3 px-3 py-2 mt-12 outline-none" type="file" name="postimage" />
    <input class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2 outline-none" type="text" placeholder="Title" name="title" />
    <textarea class="block w-1/3 h-60 px-3 py-2 border-2 rounded-md mt-2 outline-none" type="text" placeholder="Description" name="description"></textarea>
    <input class="block w-1/3 px-3 py-2 bg-red-600 text-white rounded-md mt-2" type="submit" value="Create a Post" />
  </form>
</div>

